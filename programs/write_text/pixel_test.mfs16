ld HL,0x0100_0000:d;
// Loop 4800 times (76_800 pixels / 16 pixels written per loop)
ld B, 4800:w;

main_loop:
    // Go through the colours
    ld A, 0x2301:w;
    ldi [HL],A;
    ld A, 0x6745:w;
    ldi [HL],A;
    ld A, 0xAB89:w;
    ldi [HL],A;
    ld A, 0xEFCD:w;
    ldi [HL],A;
    dec B;
    jnz main_loop;

end_loop:
    halt;
    jp end_loop;
